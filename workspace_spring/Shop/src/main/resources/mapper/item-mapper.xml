<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="itemMapper">
    <!--item resultmap-->
    <resultMap id="item" type="com.green.Shop.item.vo.ItemVO">
        <id column="ITEM_CODE" property="itemCode" />
        <result column="ITEM_NAME" property="itemName" />
        <result column="ITEM_PRICE" property="itemPrice" />
        <result column="ITEM_INTRO" property="itemIntro" />
        <result column="ITEM_STOCK" property="itemStock" />
        <result column="ITEM_STATUS" property="itemStatus" />
        <result column="CATE_CODE" property="cateCode" />
        <collection property="imgList" resultMap="img"/>
        <collection property="cateList" resultMap="category"/>
    </resultMap>

    <!--category와 연결되는 resultmap-->
    <resultMap id="category" type="com.green.Shop.item.vo.CategoryVO">
        <id column="CATE_CODE" property="cateCode" />
        <result column="CATE_NAME" property="cateName" />
    </resultMap>

    <!--img resultmap-->
    <resultMap id="img" type="com.green.Shop.item.vo.ImgVO">
        <id column="IMG_CODE" property="imgCode" />
        <result column="ORIGIN_FILE_NAME" property="originFileName" />
        <result column="ATTACHED_FILE_NAME" property="attachedFileName" />
        <result column="IS_MAIN" property="isMain" />
        <result column="ITEM_CODE" property="itemCode" />
    </resultMap>

    <!-- 상품 목록 조회 쿼리 -->
    <!-- 조회 시 조인, 서브쿼리가 사용되면 조회된 데이터를 자바로 가져오기 위해 -->
    <!--정의한 resultMap에 asscaiation 혹은 collection을 추가해야 함 -->
    <!-- 둘 중의 무엇을 쓸지는 테이블간의 관계가 1:1 관계인지 1:n 관계인지에 따라 결정 -->
    <!-- 테이블의 관계라는 건 정답이 없다. 어떤 테이블을 기준으로 삼는지에 따라 달라짐 -->

    <!-- 상품 테이블을 기준으로 이미지 테이블과 1:1 관계이다 -->
    <!-- 이렇게 결정한 테이블의 간의 관계를 vo에 적용시켜준다 -->
    <select id="getItemList" resultMap="item">
        SELECT S.ITEM_CODE, ITEM_NAME, ITEM_PRICE, ITEM_INTRO, ITEM_STOCK, ITEM_STATUS, CATE_CODE, ATTACHED_FILE_NAME
        FROM shop_item S, item_img I
        WHERE S.ITEM_CODE = I.ITEM_CODE
        AND IS_MAIN = 'Y'
        ORDER BY S.ITEM_CODE ASC
    </select>

    <!-- 상품 상세 조회 쿼리 -->
    <select id="getItemDetail" resultMap="item">
        SELECT S.ITEM_CODE, ITEM_NAME, ITEM_PRICE, ITEM_INTRO, ITEM_STOCK, ITEM_STATUS, S.CATE_CODE, ATTACHED_FILE_NAME, CATE_NAME, IMG_CODE
        FROM shop_item S, item_img I, item_category C
        WHERE S.ITEM_CODE = I.ITEM_CODE
        AND S.CATE_CODE = C.CATE_CODE
        AND S.ITEM_CODE = #{itemCode}
    </select>
</mapper>

